{
  "name": "rod-catch-returns-frontend-tests",
  "version": "1.0.0",
  "description": "Acceptance tests for the Rod Catch Returns service",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "node server.js local",
    "browserstack": "node server.js browserstack",
    "lint": "./node_modules/eslint/bin/eslint.js **/*.js",
    "lint-fix": "npm run lint -- --fix",
    "docker-build": "docker build -t defra/rod-catch-returns-frontend-tests . && docker images",
    "docker-run": "docker run -it --network host -v \"$(pwd)/logs:/app/logs/\" --env-file .env defra/rod-catch-returns-frontend-tests",
    "docker-test": "npm run docker-build && npm run docker-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DEFRA/rod-catch-returns-frontend-tests.git"
  },
  "author": "Howard Davis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DEFRA/rod-catch-returns-frontend-tests/issues"
  },
  "homepage": "https://github.com/DEFRA/rod-catch-returns-frontend-tests#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "defra-logging-facade": "git+https://github.com/DEFRA/defra-logging-facade.git",
    "defra-wdio-core": "git+https://github.com/DEFRA/defra-wdio-core.git",
    "moment": "^2.24.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "standard": "^14.1.0"
  }
}
